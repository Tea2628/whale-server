{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "risk_guard_decision",
  "type": "object",
  "required": ["request_id","decision"],
  "properties": {
    "request_id": {"type":"string"},
    "decision": {"type":"string","enum":["allow","resize","delay","reject","pause_all"]},
