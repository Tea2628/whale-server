{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "title":"position_state",
  "type":"object",
  "required":["ts","tenant_id","symbol","side","qty","avg_price"],
  "properties":{
    "ts":{"type":"integer","minimum":0},
    "tenant_id":{"type":"string"},
    "symbol":{"type":"string"},
    "side":{"type":"string","enum":["long","short","flat"]},
    "qty":{"type":"number","minimum":0},
    "avg_price":{"type":"number","minimum":0},
    "unrealized_pnl":{"type":["number","null"]},
    "leverage":{"type":["number","null"],"minimum":0}
  },
  "additionalProperties":false
}
